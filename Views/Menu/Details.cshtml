@model MenuItem
@{
    ViewData["Title"] = "Details";
}

<div class="details-panel">
    <div class="d-flex justify-content-center">
        <div class="details-image">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" />
            }
        </div>
    </div>

    <div>
        <div class="details-price mb-3">Price : <span>@Model.Price $</span></div>

        <div class="mb-2" style="font-weight:700;">@Model.Name</div>
        <div class="mb-4" style="font-size:12px;opacity:.75;">@Model.Description</div>

        <a class="btn btn-book"
           asp-controller="Booking"
           asp-action="Create"
           asp-route-menuItemId="@Model.Id">Book</a>

        <a class="btn btn-outline-dark ms-2"
           asp-controller="Menu"
           asp-action="Index">Back</a>
    </div>
</div>
