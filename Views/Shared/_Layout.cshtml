<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Golden Leaf</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="app-bg">
    <header class="topbar">
        <div class="topbar-inner">
            <div class="brand">
                <img src="~/images/logo.png" class="brand-logo" alt="Logo" />
            </div>

            <div class="topbar-actions d-flex align-items-center gap-2">
                @{
                    var adminName = Context.Session.GetString("AdminName");
                }
                @if (!string.IsNullOrWhiteSpace(adminName))
                {
                    <span class="badge bg-light text-dark rounded-pill px-3">Hello, @adminName</span>
                    <a class="btn btn-danger btn-sm rounded-pill px-3"
                       asp-controller="AdminAccount" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-light btn-sm rounded-pill px-3"
                       asp-controller="AdminAccount" asp-action="Login">For Admin</a>
                }
            </div>
        </div>
    </header>

    <main class="container-fluid main-wrap">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
