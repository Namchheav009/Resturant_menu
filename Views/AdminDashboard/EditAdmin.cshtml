@model Admin
@{
    ViewData["Title"] = "Edit Admin";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Admin</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-ui shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Admin Details</h5>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
                    <form method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label" for="Username">Username</label>
                            <input id="Username" name="Username" class="form-control input-ui" value="@Model.Username" required />
                            @Html.ValidationMessage("Username", null, new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Password">Password</label>
                            <input id="Password" name="Password" type="password" class="form-control input-ui" placeholder="Leave blank to keep current password" />
                            <small class="form-text text-muted">Leave blank to keep the existing password.</small>
                            @Html.ValidationMessage("Password", null, new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="FullName">Full Name</label>
                            <input id="FullName" name="FullName" class="form-control input-ui" value="@Model.FullName" required />
                            @Html.ValidationMessage("FullName", null, new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Email">Email</label>
                            <input id="Email" name="Email" type="email" class="form-control input-ui" value="@Model.Email" />
                            @Html.ValidationMessage("Email", null, new { @class = "text-danger" })
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">Update Admin</button>
                            <a href="@Url.Action("Admins", "AdminDashboard")" class="btn btn-outline-secondary">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Admins", "AdminDashboard")" class="btn btn-secondary mt-3">Back to Admins</a>
</div>