@{
    ViewData["Title"] = "Home";
    var adminName = Context.Session.GetString("AdminName");
}
<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<div class="home-wrap">
    <div class="home-hero">
        <div class="home-hero-bg">
            <div class="leaf-pattern"></div>
            <div class="gradient-overlay"></div>
        </div>
        
        <div class="home-content">
            <div class="home-badge">
                <span class="badge-icon">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                        <path d="M8 2L9.5 6.5H14L10.5 9.5L12 14L8 11L4 14L5.5 9.5L2 6.5H6.5L8 2Z" fill="currentColor"/>
                    </svg>
                </span>
                <span class="badge-text">Est. Golden Leaf Restaurant</span>
                <span class="badge-dot"></span>
            </div>

            <h1 class="home-title">
                <span class="title-line">Welcome to</span>
                <span class="title-main">Golden Leaf</span>
            </h1>
            
            <p class="home-subtitle">
                An intimate dining experience where tradition meets contemporary cuisine.
                <br/>Reserve your table and discover our seasonal menu.
            </p>

            <div class="home-actions">
                <a class="btn btn-primary home-btn-primary" 
                   asp-controller="Menu" asp-action="Index">
                    <span>Explore Menu</span>
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M7 4L13 10L7 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
                
                <a class="btn btn-secondary home-btn-secondary" 
                   asp-controller="Menu" asp-action="Index">
                    <span>Book a Table</span>
                </a>
            </div>

            <div class="home-features">
                <div class="feature">
                    <div class="feature-icon">🍽️</div>
                    <div class="feature-text">
                        <strong>Seasonal Menu</strong>
                        <span>Fresh ingredients daily</span>
                    </div>
                </div>
                <div class="feature">
                    <div class="feature-icon">⚡</div>
                    <div class="feature-text">
                        <strong>Quick Booking</strong>
                        <span>Name + Table number only</span>
                    </div>
                </div>
                <div class="feature">
                    <div class="feature-icon">✨</div>
                    <div class="feature-text">
                        <strong>Premium Experience</strong>
                        <span>Exceptional service</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="home-ambiance">
        <div class="ambiance-card">
            <div class="ambiance-time">
                <div class="time-dot"></div>
                <span>Now Open</span>
            </div>
            <p class="ambiance-text">
                Experience fine dining in an atmosphere of refined elegance. 
                Every detail crafted for your comfort.
            </p>
        </div>
    </div>
</div>
