@model MenuItem
@{
    ViewData["Title"] = Model.Name ?? "Details";
}

<link rel="stylesheet" href="~/css/menudetail.css" asp-append-version="true" />
<div class="details-page">
    <div class="container py-5">
        <!-- Back Navigation -->
        <div class="mb-4">
            <a class="back-link text-decoration-none" 
               asp-controller="Menu" 
               asp-action="Index">
                <i class="bi bi-arrow-left me-2"></i>Back to Menu
            </a>
        </div>

        <!-- Main Details Card -->
        <div class="details-card shadow-lg">
            <div class="row g-0">
                <!-- Image Section -->
                <div class="col-lg-6">
                    <div class="details-image-wrapper">
                        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" 
                                 alt="@Model.Name" 
                                 class="details-image" />
                            <div class="image-overlay"></div>
                        }
                        else
                        {
                            <div class="image-placeholder d-flex align-items-center justify-content-center">
                                <div class="text-center text-muted">
                                    <i class="bi bi-image-fill" style="font-size: 4rem; opacity: 0.3;"></i>
                                    <p class="mt-3 mb-0 fw-semibold">No Image Available</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Content Section -->
                <div class="col-lg-6">
                    <div class="details-content p-4 p-lg-5">
                        <!-- Price Badge -->
                        <div class="mb-4">
                            <span class="price-badge">
                                <i class="bi bi-tag-fill me-2"></i>$@Model.Price
                            </span>
                        </div>

                        <!-- Title -->
                        <h1 class="details-title mb-3">@Model.Name</h1>

                        <!-- Divider -->
                        <div class="title-divider mb-4"></div>

                        <!-- Description -->
                        <div class="details-description mb-4">
                            <h6 class="text-muted text-uppercase mb-3 fw-semibold" style="letter-spacing: 1px; font-size: 0.85rem;">
                                <i class="bi bi-info-circle me-2"></i>Description
                            </h6>
                            @if (!string.IsNullOrWhiteSpace(Model.Description))
                            {
                                <p class="lead mb-0">@Model.Description</p>
                            }
                            else
                            {
                                <p class="text-muted fst-italic mb-0">No description available for this item.</p>
                            }
                        </div>

                        <!-- Additional Info (Optional - can be customized) -->
                        <div class="info-pills mb-4">
                            <span class="info-pill">
                                <i class="bi bi-clock me-2"></i>Available Now
                            </span>
                            <span class="info-pill">
                                <i class="bi bi-star-fill me-2"></i>Popular
                            </span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="action-buttons d-flex flex-column flex-sm-row gap-3">
                            <a class="btn btn-book btn-lg flex-fill"
                               asp-controller="Booking"
                               asp-action="Create"
                               asp-route-menuItemId="@Model.Id">
                                <i class="bi bi-calendar-check me-2"></i>Book Now
                            </a>

                            <a class="btn btn-secondary-outline btn-lg flex-fill"
                               asp-controller="Menu"
                               asp-action="Index">
                                <i class="bi bi-grid me-2"></i>View All Items
                            </a>
                        </div>

                        <!-- Extra Information -->
                        <div class="extra-info mt-4 pt-4 border-top">
                            <p class="text-muted small mb-0">
                                <i class="bi bi-shield-check me-2"></i>
                                Fresh ingredients • Made to order • Quality guaranteed
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Features Section (Optional) -->
        <div class="row mt-5 g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-lightning-charge-fill"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Quick Service</h5>
                    <p class="text-muted small mb-0">Fast preparation and delivery to your table</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-heart-fill"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Made Fresh</h5>
                    <p class="text-muted small mb-0">Prepared daily with premium ingredients</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-award-fill"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Top Rated</h5>
                    <p class="text-muted small mb-0">Loved by our customers every day</p>
                </div>
            </div>
        </div>
    </div>
</div>

