@model List<MenuItem>
@{
    ViewData["Title"] = "Menu";
}

<div class="menu-page">
    <div class="container py-5">
        <!-- Header Section -->
        <div class="menu-header text-center mb-5">
            <h1 class="display-4 fw-bold mb-3">Our Menu</h1>
            <p class="text-muted lead">Discover our delicious selection</p>
        </div>

        <!-- Menu Grid -->
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <a class="menu-card text-decoration-none d-block h-100"
                       asp-controller="Menu"
                       asp-action="Details"
                       asp-route-id="@item.Id">
                        <div class="card h-100 border-0 shadow-sm overflow-hidden">
                            <!-- Image Section -->
                            <div class="menu-card-image position-relative">
                                @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" 
                                         alt="@item.Name" 
                                         class="card-img-top"
                                         style="height: 220px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="image-placeholder d-flex align-items-center justify-content-center bg-light" 
                                         style="height: 220px;">
                                        <div class="text-center text-muted">
                                            <i class="bi bi-image fs-1 mb-2"></i>
                                            <p class="mb-0 small">No Image Available</p>
                                        </div>
                                    </div>
                                }
                                <div class="card-overlay"></div>
                            </div>

                            <!-- Content Section -->
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-semibold mb-2">@item.Name</h5>
                                <p class="card-text text-muted small flex-grow-1">
                                    @if (!string.IsNullOrWhiteSpace(item.Description))
                                    {
                                        @(item.Description.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)
                                    }
                                    else
                                    {
                                        <span class="fst-italic">No description available</span>
                                    }
                                </p>
                                <div class="mt-auto pt-2">
                                    <span class="view-details">
                                        View Details <i class="bi bi-arrow-right ms-1"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-inbox fs-1 text-muted"></i>
                </div>
                <h3 class="text-muted">No Menu Items Available</h3>
                <p class="text-muted">Check back soon for delicious options!</p>
            </div>
        }
    </div>
</div>

<style>
    .menu-page {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .menu-header h1 {
        color: #2c3e50;
        position: relative;
        display: inline-block;
    }

    .menu-header h1::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        border-radius: 2px;
    }

    .menu-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: inherit;
    }

    .menu-card:hover {
        transform: translateY(-8px);
    }

    .menu-card .card {
        transition: all 0.3s ease;
        border-radius: 12px;
    }

    .menu-card:hover .card {
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
    }

    .menu-card-image {
        overflow: hidden;
    }

    .menu-card-image img {
        transition: transform 0.4s ease;
    }

    .menu-card:hover .menu-card-image img {
        transform: scale(1.1);
    }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.1) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .menu-card:hover .card-overlay {
        opacity: 1;
    }

    .card-title {
        color: #2c3e50;
        font-size: 1.1rem;
    }

    .view-details {
        color: #667eea;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .menu-card:hover .view-details {
        color: #764ba2;
        transform: translateX(4px);
    }

    .image-placeholder {
        background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
    }

    .image-placeholder i {
        opacity: 0.3;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .menu-header h1 {
            font-size: 2rem;
        }
        
        .menu-card-image img,
        .image-placeholder {
            height: 180px !important;
        }
    }
</style>
